{
    "name": "CodeBuddies Connect",
    "description": "Get connected with mentors, pair programming partner, and collaborators",
    "keywords": [
        "microframework", "rest", "router", "psr7"
    ],
    "homepage": "https://codebuddies.org",
    "license": "MIT",
    "authors": [
        {
            "name": "Julius",
            "email": "j.alvarado@engineer.com",
            "homepage": "https://github.com/ideaguy3d/cb-connect"
        }
    ],
    "require": {
        "ext-json": "*",
        "ext-pdo":  "*",
        "ext-mysqli": "*",
        "monolog/monolog": "^2.0",
        "php": "^7.4",
        "php-di/php-di": "^6.1",
        "slim/psr7": "^1.1",
        "slim/slim": "^4.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "CodeBuddies\\": [
                "src/+Classes", "src/+Abstracts", "src/+Interfaces", "src/+Structs", "src/+Traits"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
